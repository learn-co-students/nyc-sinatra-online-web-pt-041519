    
<h1>Update Figure</h1>

<h2>Figure Name: <%= @figure.name %></h2>

<form action="/figures/<%= @figure.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <br>

    <h3>New Name</h3>
    <br>
    <input type="text" name="figure[name]" id="figure_name"></input>
    <br><br>

    <p>Select an existing Title or create a new one below</p>

    <h3>Existing Titles</h3>
    <% @titles.each do |title| %>
        <input type="checkbox" name="figure[title_ids]" id="<%= title.id %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>><%= title.name %></input>
    <% end %>
    <br>

    <h3>New Title</h3>
    <label>Title:</label>
    <br>
    <input type="text" name="Title" id="title"></input>
    <br><br>

    <p>Select an existing Landmark or create a new one below</p>

    <h3>Existing Landmarks</h3>
    <% @landmarks.each do |landmark| %>
        <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.name %>" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
    <% end %>
    <br>

    <h3>New Landmark</h3>
    <label>Landmark Name:</label>
    <br>
    <input type="text" name="Landmark Name" id="new_landmark"></input>
    <br><br>

    <input type="submit" value="Edit Figure">
</form>