<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label for="Name">Name:</label>
  <br>
  <input type="text" name="figure[name]" id="figure_name">

  <br>

  <h3>Titles</h3>
  <% @titles.each do |title| %>
  <label><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><br>
  <% end %>

  <h3>Create New Title</h3>
    <input type="text" name="title[name]" id="new_title"></input>

  <h3>Landmarks</h3>
  <% @landmarks.each do |landmark| %>
  <label><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= "landmark_#{Landmark.first.id}" %>" value="<%= landmark.id %>"><br>
  <% end %>


  <h3>Create New Landmark</h3>
    <label>Name:</label>
        <input type="text" name="landmark[name]" id="new_landmark"></input>
    <label>Year:</label>
    <input type="text" name="landmark[year_completed]" id="new_landmark_year"></input>
  
  <input type="submit" value="Create New Figure">
</form>
